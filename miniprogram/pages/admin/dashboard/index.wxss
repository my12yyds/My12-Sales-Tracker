.header-top {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.admin-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 20rpx;
}

.btn-action {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 1rpx 16rpx;
  background: #1677ff;
  color: #fff;
  border-radius: 12rpx;
  border: none;
  min-height: 140rpx;
  box-shadow: 0 4rpx 10rpx rgba(22, 119, 255, 0.2);
  transition: all 0.3s;
}

.btn-action::after {
  border: none;
}

.btn-action:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.btn-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
  line-height: 1;
}

.btn-text {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.btn-desc {
  font-size: 22rpx;
  opacity: 0.9;
}

.card-title {
  font-size: 32rpx;
  font-weight: 800;
  color: #111827;
  margin-bottom: 24rpx;
  display: block;
}

.summary-row {
  display: flex;
  gap: 16rpx;
}

.summary-item {
  flex: 1;
  text-align: center;
  padding: 24rpx;
  background: #f9fafb;
  border-radius: 12rpx;
}

.value {
  display: block;
  font-size: 48rpx;
  font-weight: 800;
  color: #07c160;
  margin-bottom: 8rpx;
}

.label {
  font-size: 24rpx;
  color: #6b7280;
}

.section-title {
  font-size: 32rpx;
  font-weight: 800;
  color: #111827;
  margin-bottom: 20rpx;
  display: block;
}

.group-stats {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.group-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #e5e7eb;
}

.group-name {
  font-size: 32rpx;
  font-weight: 800;
  color: #111827;
}

.group-members {
  font-size: 24rpx;
  color: #6b7280;
}

.group-summary {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.stat-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  background: #f9fafb;
  border-radius: 12rpx;
}

.stat-value {
  display: block;
  font-size: 36rpx;
  font-weight: 800;
  color: #111827;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #6b7280;
}

.status-distribution {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #e5e7eb;
}

.dist-label {
  font-size: 26rpx;
  color: #6b7280;
  width: 100%;
  margin-bottom: 12rpx;
  font-weight: 600;
}

.dist-item {
  font-size: 24rpx;
  color: #111827;
  padding: 8rpx 14rpx;
  background: #f3f4f6;
  border-radius: 999rpx;
}

.group-leads {
  margin-top: 24rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #e5e7eb;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.leads-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #111827;
  margin-bottom: 8rpx;
}

.lead-row-wrapper {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  padding: 16rpx;
  background: #f9fafb;
  border-radius: 12rpx;
}

.lead-row {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.lead-main {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.lead-phone {
  font-size: 30rpx;
  font-weight: 800;
  color: #111827;
}

.lead-meta {
  display: flex;
  gap: 20rpx;
  flex-wrap: wrap;
  color: #6b7280;
  font-size: 24rpx;
}

.meta-text {
  color: #6b7280;
}
