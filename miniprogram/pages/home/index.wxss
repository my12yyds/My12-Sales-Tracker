.card {
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 38rpx;
  font-weight: 800;
  color: #111827;
  margin-bottom: 16rpx;
}

.role-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 20rpx;
}

.btn-action {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 24rpx 16rpx;
  background: #1677ff;
  color: #fff;
  border-radius: 12rpx;
  border: none;
  min-height: 140rpx;
  box-shadow: 0 4rpx 10rpx rgba(22, 119, 255, 0.2);
  transition: all 0.3s;
}

.btn-action.btn-success {
  background: #07c160;
  box-shadow: 0 4rpx 10rpx rgba(7, 193, 96, 0.2);
}

.btn-action::after {
  border: none;
}

.btn-action:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.btn-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
  line-height: 1;
}

.btn-text {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.btn-desc {
  font-size: 22rpx;
  opacity: 0.9;
}
