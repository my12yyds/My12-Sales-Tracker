.register-title {
  font-size: 38rpx;
  font-weight: 800;
  color: #111827;
  margin-bottom: 12rpx;
}

.register-subtitle {
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.6;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-item:last-of-type {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #111827;
  margin-bottom: 16rpx;
}

.input {
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 18rpx;
  border: 1rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #fff;
  color: #111827;
}

.radio-group {
  display: flex;
  gap: 32rpx;
  margin-top: 8rpx;
}

.radio-row {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #111827;
}

.radio-row radio {
  margin-right: 8rpx;
}

.btn-primary {
  width: 100%;
  background: #1677ff;
  color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 32rpx;
  font-weight: 600;
  margin-top: 40rpx;
}

.btn-primary[disabled] {
  background: #d1d5db;
  color: #9ca3af;
}

