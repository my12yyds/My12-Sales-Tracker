.user-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.user-name {
  font-size: 40rpx;
  font-weight: 800;
  color: #111827;
}

.user-role-tag {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  background: #e6f7ff;
  color: #1677ff;
  border: 1rpx solid rgba(22,119,255,0.25);
}

.info-section {
  margin-bottom: 30rpx;
}

.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-row:last-child {
  border-bottom: none;
  margin-bottom: 0;
  padding-bottom: 0;
}

.label {
  font-size: 28rpx;
  font-weight: 600;
  color: #6b7280;
  min-width: 140rpx;
  margin-right: 20rpx;
}

.value {
  flex: 1;
  font-size: 28rpx;
  color: #111827;
  word-break: break-all;
}

.actions {
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 2rpx solid #f0f0f0;
}

.btn-success {
  width: 100%;
  background: #07c160;
  color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.loading {
  text-align: center;
  padding: 100rpx 0;
  color: #6b7280;
  font-size: 28rpx;
}
